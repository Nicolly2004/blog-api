// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  name String
  birthDate DateTime
  password String
  gander String
  posts Post[]
}

model Post {
  id String @id @default(uuid())
  title String
  content String 
  isActive Boolean @default(false)
  authoe User @relation(fields: [authorId],references: [id])
  authorId String
}